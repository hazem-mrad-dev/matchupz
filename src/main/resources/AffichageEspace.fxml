<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EspaceSportif.AffichageEspace">

    <HBox alignment="CENTER" spacing="10">
        <!-- Menu latéral -->
        <VBox prefHeight="600" prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" text="MATCHUPZ" />

            <Button fx:id="btnUtilisateur" styleClass="menu-button" text="🏠 Utilisateur" />
            <Button fx:id="btnJoueur" styleClass="menu-button" text="⚽ Joueur" />
            <Button fx:id="btnMatchs" styleClass="menu-button" text="🏆 Matchs" />
            <Button fx:id="btnEspaceSportif" styleClass="menu-button" text="📍 Espace Sportif" />
            <Button fx:id="btnSponsoring" styleClass="menu-button" text="💰 Sponsoring" />

        </VBox>

        <!-- Contenu principal -->
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Liste des Espaces Sportifs" />

            <!-- Champ de recherche avec icône 🔍 -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #5cb85c;" text="🔍" />
                <TextField fx:id="searchField" prefHeight="34.0" prefWidth="411.0" promptText="Rechercher un espace sportif..." styleClass="search-field" />
                <Region fx:id="spacer" prefHeight="34.0" prefWidth="149.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnReservations" onAction="#goToReservation" text="📅 Réservations" />

            </HBox>

            <TableView fx:id="tableView" prefHeight="400" prefWidth="650">
                <columns>
                    <TableColumn fx:id="colId" minWidth="50" text="ID" />
                    <TableColumn fx:id="colNom" minWidth="150" text="Nom" />
                    <TableColumn fx:id="colAdresse" minWidth="200" text="Adresse" />
                    <TableColumn fx:id="colCategorie" minWidth="100" text="Catégorie" />
                    <TableColumn fx:id="colCapacite" minWidth="100" text="Capacité" />
                    <TableColumn fx:id="colActions" minWidth="150" text="Actions" />
                </columns>
            </TableView>

            <!-- Boutons (Ajouter, Rafraîchir) -->
            <HBox spacing="10">
                <Button fx:id="btnAjouter" onAction="#addEspace" text="Ajouter" />
                <Button fx:id="btnRefresh" onAction="#refreshList" text="Rafraîchir" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
