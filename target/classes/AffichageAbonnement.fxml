<AnchorPane prefHeight="618.0" prefWidth="1050.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EspaceSportif.AffichageAbonnement">
    <AnchorPane layoutX="217.0" layoutY="14.0" prefHeight="593.0" prefWidth="823.0" stylesheets="@dashboardDesign1.css">
        <styleClass>
            <String fx:value="white-bg" />
            <String fx:value="shadow" />
        </styleClass>
    </AnchorPane>

    <!-- Contenu principal -->
    <VBox alignment="CENTER" layoutX="211.0" layoutY="27.0" prefHeight="565.0" prefWidth="833.0" spacing="15" style="-fx-padding: 20px;">
        <Label text="Liste des Abonnements" />

        <!-- Champ de recherche avec icône 🔍 -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #5cb85c;" text="🔍" />
            <TextField fx:id="searchField" prefHeight="34.0" prefWidth="479.0" promptText="Rechercher un abonnement..." styleClass="search-field" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEspaceSportif" onAction="#goToEspaceSportif" text="📍 Espaces Sportifs" />
            <Button fx:id="btnReservations" onAction="#goToReservation" text="📅 Réservations" />
        </HBox>

        <TableView fx:id="tableView" prefHeight="391.0" prefWidth="747.0">
            <columns>
                <TableColumn fx:id="colId" minWidth="50" text="ID" />
                <TableColumn fx:id="colClub" minWidth="100" text="Club" />  <!-- Changé de colSport à colClub et texte de Sport à Club -->
                <TableColumn fx:id="colType" minWidth="100" text="Type" />
                <TableColumn fx:id="colDateDebut" minWidth="120" text="Date Début" />
                <TableColumn fx:id="colDateFin" minWidth="120" text="Date Fin" />
                <TableColumn fx:id="colTarif" minWidth="80" text="Tarif" />
                <TableColumn fx:id="colEtat" minWidth="80" text="État" />
                <TableColumn fx:id="colActions" minWidth="150" text="Actions" />
            </columns>
        </TableView>

        <!-- Boutons (Ajouter, Rafraîchir) -->
        <HBox spacing="10">
            <Button fx:id="btnAjouter" onAction="#addAbonnement" styleClass="form-button" text="Ajouter" />
            <Button fx:id="btnRefresh" onAction="#refreshList" styleClass="form-button" text="🔄" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnExport" onAction="#handleExportAbonnements" styleClass="form-button" text="Exporter en PDF" />
        </HBox>
    </VBox>

