<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="609.0" prefWidth="820.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterContrat">

    <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" spacing="10" style="-fx-padding: 20px;" />
    <HBox layoutY="7.0" spacing="10">
        <children>
            <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
                <children>
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" text="MATCHUPZ" />
                    <Button styleClass="menu-button" text="🏠 Utilisateur" />
                    <Button styleClass="menu-button" text="⚽ Joueur" />
                    <Button styleClass="menu-button" text="🏆 Matchs" />
                    <Button styleClass="menu-button" text="📍 EspaceSportif" />
                    <Button styleClass="menu-button" text="💰 Contrats" />
                </children>
            </VBox>
            <TabPane prefHeight="622.0" prefWidth="709.0">
                <tabs>
                    <!-- Onglet Ajouter un Contrat -->
                    <Tab text="Ajouter Contrat">
                        <content>
                            <AnchorPane>
                                <children>
                                    <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajouter/Modifier un Contrat" />

                                    <Label layoutX="36.0" layoutY="72.0" text="Titre :" />
                                    <TextField fx:id="tx_contrat_titre" layoutX="96.0" layoutY="56.0" prefWidth="300" />

                                    <Label layoutX="25.0" layoutY="101.0" text="Sponsor :" />

                                    <Label layoutX="17.0" layoutY="139.0" text="Date Début :" />
                                    <DatePicker fx:id="dp_date_debut" layoutX="96.0" layoutY="136.0" prefWidth="300" />

                                    <Label layoutX="25.0" layoutY="179.0" text="Date Fin :" />
                                    <DatePicker fx:id="dp_date_fin" layoutX="96.0" layoutY="176.0" prefWidth="300" />

                                    <Label layoutX="25.0" layoutY="219.0" text="Montant :" />
                                    <TextField fx:id="tx_contrat_montant" layoutX="96.0" layoutY="216.0" prefWidth="300" />

                                    <Button fx:id="btnAjouterContrat" layoutX="96.0" layoutY="270.0" onAction="#ajouterContrat" styleClass="action-button" text="Ajouter" />
                                    <Button fx:id="btnAnnuler" layoutX="200.0" layoutY="270.0" styleClass="cancel-button" text="Annuler" />
                                    <TextField fx:id="tx_contrat_sponsor" layoutX="96.0" layoutY="97.0" prefHeight="26.0" prefWidth="300.0" />
                                </children>
                            </AnchorPane>
                        </content>
                    </Tab>

                    <!-- Onglet Liste des Contrats -->
                    <Tab text="Liste des Contrats">
                        <content>
                            <AnchorPane>
                                <children>
                                    <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Contrats" />

                                    <TableView fx:id="tableViewContrats" layoutX="20" layoutY="50" prefHeight="400" prefWidth="650">
                                        <columns>
                                            <TableColumn fx:id="colTitre" prefWidth="150.0" text="Titre" />
                                            <TableColumn fx:id="colSponsor" prefWidth="130.0" text="Sponsor" />
                                            <TableColumn fx:id="colDateDebut" prefWidth="120.0" text="Date Début" />
                                            <TableColumn fx:id="colDateFin" prefWidth="120.0" text="Date Fin" />
                                            <TableColumn fx:id="colMontant" prefWidth="120.0" text="Montant" />
                                        </columns>
                                    </TableView>

                                    <Button fx:id="btnSupprimerContrat" layoutX="20" layoutY="470" styleClass="delete-button" text="Supprimer" />
                                    <Button fx:id="btnModifierContrat" layoutX="120" layoutY="470" styleClass="edit-button" text="Modifier" />
                                    <Button fx:id="btnActualiserContrat" layoutX="220" layoutY="470" styleClass="refresh-button" text="Actualiser" />
                                </children>
                            </AnchorPane>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </children>
    </HBox>
</AnchorPane>
