<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ScheduleController"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="900.0">

    <HBox spacing="10" alignment="CENTER">
        <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label text="MATCHUPZ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />

            <Button text="🏠 Utilisateur" styleClass="menu-button" />
            <Button text="⚽ Joueur" styleClass="menu-button" />
            <Button text="🏆 Matchs" styleClass="menu-button" />
            <Button text="📍 EspaceSportif" styleClass="menu-button" />
            <Button text="💰 Sponsoring" styleClass="menu-button" />
        </VBox>

        <TabPane prefWidth="680" prefHeight="600">
            <Tab text="Matchs">
                <HBox spacing="20">
                    <VBox spacing="10" prefWidth="350" style="-fx-padding: 15px;">
                        <Label text="Ajouter / Modifier un Match" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <Label text="Équipe 1 (C1) :" />
                        <TextField fx:id="textFieldC1" prefWidth="300" />

                        <Label text="Équipe 2 (C2) :" />
                        <TextField fx:id="textFieldC2" prefWidth="300" />

                        <Label text="Type de Sport :" />
                        <ComboBox fx:id="comboBoxSportType" prefWidth="200.0" />
                        <HBox spacing="10">
                            <Button text="Finaliser" fx:id="btnAjoutMatch" styleClass="action-button" />
                            <Button text="Annuler" fx:id="btnAnnulerMatch" styleClass="cancel-button" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10" prefWidth="300">
                        <Label text="Liste des Matchs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <TableView fx:id="tableViewMatches" prefWidth="300" prefHeight="400">
                            <columns>
                                <TableColumn text="ID Match" fx:id="colId" prefWidth="80"/>
                                <TableColumn text="C1" fx:id="colC1" prefWidth="100"/>
                                <TableColumn text="C2" fx:id="colC2" prefWidth="100"/>
                                <TableColumn text="Sport Type" fx:id="colSportType" prefWidth="100"/>
                                <TableColumn fx:id="colActions" text="Actions" />
                            </columns>
                        </TableView>

                        <HBox spacing="10">
                            <Button text="Actualiser" fx:id="btnActualiserMatch" styleClass="refresh-button" />
                        </HBox>
                    </VBox>
                </HBox>
            </Tab>

            <Tab text="Schedule" fx:id="tabSchedule">
                <HBox spacing="20">
                    <VBox spacing="10" prefWidth="350" style="-fx-padding: 15px;">
                        <Label text="Ajouter / Modifier un Schedule" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <Label text="Date du Match :" />
                        <DatePicker fx:id="datePickerDateMatch" />

                        <Label text="Heure de Début :" />
                        <Spinner fx:id="spinnerStartTime" prefWidth="100" />

                        <Label text="Heure de Fin :" />
                        <Spinner fx:id="spinnerEndTime" prefWidth="100" />

                        <Label text="ID Match FK :" />
                        <TextField fx:id="textFieldIdMatchFK" />

                        <Label text="ID Lieu :" />
                        <TextField fx:id="textFieldIdLieu" prefWidth="300" />

                        <HBox spacing="10">
                            <Button text="Finaliser" fx:id="btnAjoutSchedule" styleClass="action-button" />
                            <Button text="Annuler" fx:id="btnAnnulerSchedule" styleClass="cancel-button" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10" prefWidth="300">
                        <Label text="Liste des Schedules" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <TableView fx:id="tableViewSchedules" prefWidth="300" prefHeight="400">
                            <columns>
                                <TableColumn text="ID Schedule" fx:id="colIdSchedule" prefWidth="80"/>
                                <TableColumn text="Date" fx:id="colDateMatch" prefWidth="100"/>
                                <TableColumn text="Début" fx:id="colStartTime" prefWidth="80"/>
                                <TableColumn text="Fin" fx:id="colEndTime" prefWidth="80"/>
                                <TableColumn text="Match FK" fx:id="colIdMatchFK" prefWidth="80"/>
                                <TableColumn text="Lieu" fx:id="colIdLieu" prefWidth="80"/>
                                <TableColumn fx:id="colActionsSchedule" text="Actions" />
                            </columns>
                        </TableView>

                        <HBox spacing="10">
                            <Button text="Actualiser" fx:id="btnActualiserSchedule" styleClass="refresh-button" />
                        </HBox>
                    </VBox>
                </HBox>
            </Tab>
        </TabPane>
    </HBox>
</AnchorPane>
