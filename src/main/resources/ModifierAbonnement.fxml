<AnchorPane prefHeight="600.0" prefWidth="1050.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EspaceSportif.ModifierAbonnement">
   <!-- Background panel with shadow -->
   <AnchorPane layoutX="213.0" layoutY="12.0" prefHeight="593.0" prefWidth="826.0" stylesheets="@dashboardDesign1.css">
      <styleClass>
         <String fx:value="white-bg" />
         <String fx:value="shadow" />
      </styleClass>
   </AnchorPane>

   <!-- Main Content -->
   <VBox alignment="CENTER" layoutX="228.0" layoutY="18.0" prefHeight="545.0" prefWidth="741.0" spacing="15" style="-fx-padding: 20px;">
      <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Modifier un Abonnement" />

      <GridPane alignment="CENTER" hgap="15" vgap="15">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="450.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>

         <!-- Champ Club (anciennement Sport) -->
         <Label text="Club :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <ComboBox fx:id="clubField" prefHeight="42.0" prefWidth="525.0" promptText="Choisir un club" GridPane.columnIndex="1" GridPane.rowIndex="0" />  <!-- Changé sportField à clubField et texte -->

         <!-- Champ Type d'abonnement -->
         <Label text="Type d'abonnement :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <ComboBox fx:id="typeField" prefHeight="42.0" prefWidth="519.0" promptText="Sélectionner le type" GridPane.columnIndex="1" GridPane.rowIndex="1" />

         <!-- Champ Date de début -->
         <Label text="Date de début :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <DatePicker fx:id="dateDebutField" prefHeight="32.0" prefWidth="522.0" promptText="Choisir la date de début" GridPane.columnIndex="1" GridPane.rowIndex="2" />

         <!-- Champ Date de fin -->
         <Label text="Date de fin :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <DatePicker fx:id="dateFinField" prefHeight="32.0" prefWidth="518.0" promptText="Choisir la date de fin" GridPane.columnIndex="1" GridPane.rowIndex="3" />

         <!-- Champ Tarif -->
         <Label text="Tarif :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
         <TextField fx:id="tarifField" prefHeight="33.0" prefWidth="450" promptText="Entrer le tarif" GridPane.columnIndex="1" GridPane.rowIndex="4" />

         <!-- Champ État -->
         <Label text="Statut :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
         <ComboBox fx:id="etatField" prefHeight="42.0" prefWidth="520.0" promptText="Sélectionner le statut" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      </GridPane>

      <HBox alignment="CENTER" spacing="10">
         <Button fx:id="updateButton" onAction="#updateAbonnement" styleClass="form-button" text="Modifier" />
         <Button fx:id="cancelButton" onAction="#annuler" styleClass="form-button" text="Annuler" />
         <Button fx:id="retourButton" onAction="#goToAfficherAbonnements" styleClass="form-button" text="Retour" />
      </HBox>
   </VBox>

   <!-- Sidebar Navigation -->
   <AnchorPane prefHeight="618.0" prefWidth="206.0" styleClass="nav-form" stylesheets="@dashboardDesign1.css">
      <children>
         <Line endX="69.0" layoutX="121.0" layoutY="178.0" startX="-100.0" stroke="WHITE" />
         <Button fx:id="logout" layoutX="36.0" layoutY="505.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="41.0" stylesheets="@dashboardDesign1.css">
            <styleClass>
               <String fx:value="logout" />
               <String fx:value="shadow" />
            </styleClass>
         </Button>
         <Label layoutX="83.0" layoutY="510.0" prefHeight="30.0" prefWidth="88.0" text="LOGOUT" textFill="WHITE">
            <font>
               <Font name="Montserrat ExtraBold" size="20.0" />
            </font>
         </Label>
         <Accordion layoutX="-1.0" layoutY="189.0" prefHeight="250.0" prefWidth="200.0">
            <panes>
               <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Home" textFill="WHITE">
                  <font>
                     <Font name="Montserrat ExtraBold" size="12.0" />
                  </font>
                  <content>
                     <VBox alignment="CENTER" spacing="0">
                        <children>
                           <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Overview">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                           <Button alignment="CENTER" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" styleClass="accordion-button" text="Statistics">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                        </children>
                     </VBox>
                  </content>
               </TitledPane>
               <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Responsable Financier" textFill="WHITE">
                  <font>
                     <Font name="Montserrat ExtraBold" size="12.0" />
                  </font>
                  <content>
                     <VBox alignment="CENTER" spacing="0">
                        <children>
                           <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Budget">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnSponsoring" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Contract Sponsors" />
                        </children>
                     </VBox>
                  </content>
               </TitledPane>
               <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Responsable Logistique" textFill="WHITE">
                  <font>
                     <Font name="Montserrat ExtraBold" size="12.0" />
                  </font>
                  <content>
                     <VBox alignment="CENTER" spacing="0">
                        <children>
                           <Button alignment="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="140.0" styleClass="accordion-button" text="Logistiques">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                           <Button fx:id="btnEspaceSportif" alignment="CENTER" mnemonicParsing="false" onAction="#goToAfficherAbonnements" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Espace Sportif" />
                        </children>
                     </VBox>
                  </content>
               </TitledPane>
               <TitledPane animated="false" text="Responsable Sportive" textFill="WHITE">
                  <content>
                     <VBox alignment="CENTER" spacing="0">
                        <children>
                           <Button fx:id="btnMatchs" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Matches">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                           <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Teams">
                              <font>
                                 <Font name="Montserrat Medium" size="12.0" />
                              </font>
                           </Button>
                        </children>
                     </VBox>
                  </content>
                  <font>
                     <Font name="Montserrat ExtraBold" size="12.0" />
                  </font>
               </TitledPane>
            </panes>
         </Accordion>
         <AnchorPane layoutX="6.0" layoutY="14.0" prefHeight="155.0" prefWidth="200.0">
            <children>
               <ImageView fitHeight="41.0" fitWidth="184.0" layoutX="8.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@images/logo_horizantal.png" />
                  </image>
               </ImageView>
               <Label alignment="CENTER" layoutY="69.0" prefHeight="38.0" prefWidth="200.0" text="Welcome," textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="Comic Sans MS" size="29.0" />
                  </font>
               </Label>
               <Label alignment="CENTER" layoutY="101.0" prefHeight="38.0" prefWidth="200.0" text="User" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="Comic Sans MS Bold" size="35.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
         <ImageView fitHeight="30.0" fitWidth="72.0" layoutX="41.0" layoutY="510.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/logout_w.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>
</AnchorPane>
