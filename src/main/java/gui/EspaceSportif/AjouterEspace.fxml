<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.EspaceSportif.AjouterEspace"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="900.0">

    <HBox spacing="10">
        <!-- Menu latéral -->
        <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label text="MATCHUPZ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />

            <Button text="🏠 Utilisateur" styleClass="menu-button" />
            <Button text="⚽ Joueur" styleClass="menu-button" />
            <Button text="🏆 Matchs" styleClass="menu-button" />
            <Button text="📍 EspaceSportif" styleClass="menu-button" />
            <Button text="💰 Sponsoring" styleClass="menu-button" />
        </VBox>

        <!-- Contenu principal -->
        <TabPane prefWidth="700" prefHeight="600">
            <!-- Onglet Ajouter Espace -->
            <Tab text="Ajouter Espace">
                <AnchorPane>
                    <Label text="Ajouter/Modifier un espace" layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                    <Label text="Nom :" layoutX="20" layoutY="60" />
                    <TextField fx:id="textFieldNom" layoutX="100" layoutY="60" prefWidth="200" />

                    <Label text="Adresse :" layoutX="20" layoutY="100" />
                    <TextField fx:id="textFieldAdresse" layoutX="100" layoutY="100" prefWidth="200" />

                    <Label text="Catégorie :" layoutX="20" layoutY="140" />
                    <ComboBox fx:id="comboBoxCategorie" layoutX="100" layoutY="140" prefWidth="200" />

                    <Label text="Capacité :" layoutX="20" layoutY="180" />
                    <TextField fx:id="textFieldCapacite" layoutX="100" layoutY="180" prefWidth="200" />

                    <Button text="Finaliser" fx:id="btnAjout" layoutX="100" layoutY="230" styleClass="action-button" />
                    <Button text="Annuler" fx:id="btnAnnuler" layoutX="180" layoutY="230" styleClass="cancel-button" />
                </AnchorPane>
            </Tab>

            <!-- Onglet Affichage des Espaces -->
            <Tab text="Liste des Espaces">
                <AnchorPane>
                    <Label text="Liste des Espaces Sportifs" layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                    <TableView fx:id="tableViewEspaces" layoutX="20" layoutY="50" prefWidth="650" prefHeight="400">
                        <columns>
                            <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
                            <TableColumn text="Nom" fx:id="colNom" prefWidth="150"/>
                            <TableColumn text="Adresse" fx:id="colAdresse" prefWidth="200"/>
                            <TableColumn text="Catégorie" fx:id="colCategorie" prefWidth="150"/>
                            <TableColumn text="Capacité" fx:id="colCapacite" prefWidth="100"/>
                        </columns>
                    </TableView>

                    <Button text="Supprimer" fx:id="btnSupprimer" layoutX="20" layoutY="470" styleClass="delete-button" />
                    <Button text="Modifier" fx:id="btnModifier" layoutX="120" layoutY="470" styleClass="edit-button" />
                    <Button text="Actualiser" fx:id="btnActualiser" layoutX="220" layoutY="470" styleClass="refresh-button" />
                </AnchorPane>
            </Tab>
        </TabPane>
    </HBox>
</AnchorPane>
