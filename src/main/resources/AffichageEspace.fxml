<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.EspaceSportif.AjouterEspace"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="900.0">

    <HBox spacing="10" alignment="CENTER">
        <!-- Menu latéral -->
        <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label text="MATCHUPZ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />

            <Button text="🏠 Utilisateur" styleClass="menu-button" />
            <Button text="⚽ Joueur" styleClass="menu-button" />
            <Button text="🏆 Matchs" styleClass="menu-button" />
            <Button text="📍 EspaceSportif" styleClass="menu-button" />
            <Button text="💰 Sponsoring" styleClass="menu-button" />
        </VBox>

        <!-- Contenu principal (Ajouter & Affichage ensemble) -->
        <HBox spacing="20">
            <!-- Formulaire d'ajout/modification -->
            <VBox spacing="10" prefWidth="350" style="-fx-padding: 15px;">
                <Label text="Ajouter / Modifier un Espace" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Nom :" />
                <TextField fx:id="textFieldNom" prefWidth="300" />

                <Label text="Adresse :" />
                <TextField fx:id="textFieldAdresse" prefWidth="300" />

                <Label text="Catégorie :" />
                <ComboBox fx:id="comboBoxCategorie" prefWidth="300" />

                <Label text="Capacité :" />
                <TextField fx:id="textFieldCapacite" prefWidth="300" />

                <HBox spacing="10">
                    <Button text="Finaliser" fx:id="btnAjout" styleClass="action-button" />
                    <Button text="Annuler" fx:id="btnAnnuler" styleClass="cancel-button" />
                </HBox>
            </VBox>

            <!-- Table d'affichage -->
            <VBox spacing="10" prefWidth="500">
                <Label text="Liste des Espaces Sportifs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <TableView fx:id="tableViewEspaces" prefWidth="500" prefHeight="400">
                    <columns>
                        <TableColumn text="Nom" fx:id="colNom" prefWidth="150"/>
                        <TableColumn text="Adresse" fx:id="colAdresse" prefWidth="200"/>
                        <TableColumn text="Catégorie" fx:id="colCategorie" prefWidth="150"/>
                        <TableColumn text="Capacité" fx:id="colCapacite" prefWidth="100"/>
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Button text="Supprimer" fx:id="btnSupprimer" styleClass="delete-button" />
                    <Button text="Modifier" fx:id="btnModifier" styleClass="edit-button" />
                    <Button text="Actualiser" fx:id="btnActualiser" styleClass="refresh-button" />
                </HBox>
            </VBox>
        </HBox>
    </HBox>
</AnchorPane>
