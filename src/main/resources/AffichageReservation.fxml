<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="618.0" prefWidth="1050.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EspaceSportif.AffichageReservation">
    <AnchorPane layoutX="217.0" layoutY="14.0" prefHeight="593.0" prefWidth="825.0" stylesheets="@dashboardDesign1.css">
        <styleClass>
            <String fx:value="white-bg" />
            <String fx:value="shadow" />
        </styleClass>
    </AnchorPane>

    <HBox alignment="CENTER" spacing="10" />

    <!-- Contenu principal -->
    <VBox alignment="CENTER" layoutX="211.0" layoutY="27.0" prefHeight="565.0" prefWidth="819.0" spacing="15" style="-fx-padding: 20px;">
        <Label text="Liste des Réservations" />

        <!-- Champ de recherche avec icône 🔍 -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #5cb85c;" text="🔍" />
            <TextField fx:id="searchField" prefHeight="34.0" prefWidth="479.0" promptText="Rechercher une réservation..." styleClass="search-field" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnEspaceSportif" onAction="#goToEspaceSportif" text="📍 Espaces" />
            <Button fx:id="btnAbonnements" onAction="#goToAbonnement" text="🎟️ Abonnements" />
        </HBox>

        <TableView fx:id="tableView" prefHeight="391.0" prefWidth="747.0">
            <columns>
                <TableColumn fx:id="colId" minWidth="50" text="ID" />
                <TableColumn fx:id="colLieu" minWidth="150" text="Lieu" />
                <TableColumn fx:id="colDate" minWidth="150" text="Date" />
                <TableColumn fx:id="colMotif" minWidth="150" text="Motif" />
                <TableColumn fx:id="colStatus" minWidth="100" text="Statut" />
                <TableColumn fx:id="colActions" minWidth="150" text="Actions" />
            </columns>
        </TableView>

        <!-- Boutons (Ajouter, Rafraîchir) -->
        <HBox spacing="10">
            <Button fx:id="btnAjouter" onAction="#addReservation" styleClass="form-button" text="Ajouter" />
            <Button fx:id="btnRefresh" onAction="#refreshList" styleClass="form-button" text="🔄" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnExport" onAction="#handleExportReservations" text="Exporter en PDF" styleClass="form-button" />
        </HBox>
    </VBox>
    <AnchorPane prefHeight="618.0" prefWidth="206.0" styleClass="nav-form" stylesheets="@dashboardDesign1.css">
        <children>
            <Line endX="69.0" layoutX="121.0" layoutY="178.0" startX="-100.0" stroke="WHITE" />
            <Button fx:id="logout" layoutX="36.0" layoutY="505.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="38.0" stylesheets="@/dashboardDesign1.css">
                <styleClass>
                    <String fx:value="logout" />
                    <String fx:value="shadow" />
                </styleClass>
            </Button>
            <Label layoutX="83.0" layoutY="510.0" prefHeight="30.0" prefWidth="82.0" text="LOGOUT" textFill="WHITE">
                <font>
                    <Font name="Montserrat ExtraBold" size="20.0" />
                </font>
            </Label>
            <Accordion layoutX="-1.0" layoutY="189.0" prefHeight="250.0" prefWidth="200.0">
                <panes>
                    <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Home" textFill="WHITE">
                        <font>
                            <Font name="Montserrat ExtraBold" size="12.0" />
                        </font>
                        <content>
                            <VBox alignment="CENTER" spacing="0">
                                <children>
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Overview">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" styleClass="accordion-button" text="Statistics">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                </children>
                            </VBox>
                        </content>
                    </TitledPane>
                    <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Responsable Financier" textFill="WHITE">
                        <font>
                            <Font name="Montserrat ExtraBold" size="12.0" />
                        </font>
                        <content>
                            <VBox alignment="CENTER" spacing="0">
                                <children>
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Budget">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="btnSponsoring" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Contract Sponsors" />
                                </children>
                            </VBox>
                        </content>
                    </TitledPane>
                    <TitledPane animated="false" prefHeight="242.0" prefWidth="177.0" text="Responsable Logistique" textFill="WHITE">
                        <font>
                            <Font name="Montserrat ExtraBold" size="12.0" />
                        </font>
                        <content>
                            <VBox alignment="CENTER" spacing="0">
                                <children>
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="140.0" styleClass="accordion-button" text="Logistiques">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="btnEspaceSportif1" alignment="CENTER" mnemonicParsing="false" onAction="#goToEspaceSportif" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Espace Sportif">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                </children>
                            </VBox>
                        </content>
                    </TitledPane>
                    <TitledPane animated="false" text="Responsable Sportive" textFill="WHITE">
                        <content>
                            <VBox alignment="CENTER" spacing="0">
                                <children>
                                    <Button fx:id="btnMatchs" alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Matches">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                    <Button alignment="CENTER" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" styleClass="accordion-button" text="Teams">
                                        <font>
                                            <Font name="Montserrat Medium" size="12.0" />
                                        </font>
                                    </Button>
                                </children>
                            </VBox>
                        </content>
                        <font>
                            <Font name="Montserrat ExtraBold" size="12.0" />
                        </font>
                    </TitledPane>
                </panes>
            </Accordion>
            <AnchorPane layoutX="6.0" layoutY="14.0" prefHeight="155.0" prefWidth="200.0">
                <children>
                    <ImageView fitHeight="41.0" fitWidth="184.0" layoutX="8.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/logo_horizantal.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" layoutY="69.0" prefHeight="38.0" prefWidth="200.0" text="Welcome," textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font name="Comic Sans MS" size="29.0" />
                        </font>
                    </Label>
                    <Label alignment="CENTER" layoutY="101.0" prefHeight="38.0" prefWidth="200.0" text="User" textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font name="Comic Sans MS Bold" size="35.0" />
                        </font>
                    </Label>
                </children>
            </AnchorPane>
            <ImageView fitHeight="30.0" fitWidth="72.0" layoutX="41.0" layoutY="510.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/logout_w.png" />
                </image>
            </ImageView>
        </children>
    </AnchorPane>
</AnchorPane>
