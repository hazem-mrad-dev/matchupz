         <Button fx:id="bt_user" alignment="CENTER" layoutX="-7.0" layoutY="431.0" mnemonicParsing="false" onAction="#pageuser" prefHeight="40.0" prefWidth="202.0" styleClass="accordion-button" text="Utilisateur ">
