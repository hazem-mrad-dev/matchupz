<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.EspaceSportif.AjouterReservation"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="900.0">

    <HBox spacing="10" alignment="CENTER">
        <!-- Menu latéral -->
        <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label text="MATCHUPZ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />

            <Button text="🏠 Utilisateur" fx:id="btnUtilisateur" styleClass="menu-button" />
            <Button text="⚽ Joueur" fx:id="btnJoueur" styleClass="menu-button" />
            <Button text="🏆 Matchs" fx:id="btnMatchs" styleClass="menu-button" />
            <Button text="📍 Espace Sportif" fx:id="btnEspaceSportif" styleClass="menu-button" />
            <Button text="💰 Sponsoring" fx:id="btnSponsoring" styleClass="menu-button" />
        </VBox>

        <!-- Formulaire d'ajout -->
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
            <Label text="Ajouter une Réservation" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <Label text="Lieu :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="idLieuField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Date :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <DatePicker fx:id="dateField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Heure :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="heureField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Motif :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="motifField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Statut :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <ComboBox fx:id="statusField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Ajouter" fx:id="btnAjouter" styleClass="form-button" onAction="#ajouterReservation"/>
                <Button text="Annuler" fx:id="btnAnnuler" styleClass="form-button" onAction="#annulerReservation"/>
                <Button text="Retour" fx:id="btnRetour" styleClass="form-button" onAction="#goToAfficherReservations"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
