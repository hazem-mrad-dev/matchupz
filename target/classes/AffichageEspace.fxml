         <String fx:value="white-bg" />
         <String fx:value="shadow" />
      </styleClass>
   </AnchorPane>

   <!-- Navigation sidebar -->
   <AnchorPane prefHeight="618.0" prefWidth="206.0" styleClass="nav-form" stylesheets="@dashboardDesign.css">
      <children>
         <Line endX="69.0" layoutX="121.0" layoutY="178.0" startX="-100.0" stroke="WHITE" />
         <Button fx:id="logout" layoutX="36.0" layoutY="505.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="41.0" stylesheets="@dashboardDesign.css">
            <styleClass>
               <String fx:value="logout" />
               <String fx:value="shadow" />
            </styleClass>
         </Button>
         <Label layoutX="83.0" layoutY="510.0" prefHeight="30.0" prefWidth="88.0" text="LOGOUT" textFill="WHITE">
            <font>
               <Font name="Montserrat ExtraBold" size="20.0" />
            </font>
         </Label>
         <Accordion layoutX="-1.0" layoutY="189.0" prefHeight="250.0" prefWidth="200.0" />
         <AnchorPane layoutX="6.0" layoutY="14.0" prefHeight="155.0" prefWidth="200.0">
            <children>
               <ImageView fitHeight="41.0" fitWidth="184.0" layoutX="8.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@images/logo_horizantal.png" />
                  </image>
               </ImageView>
               <Label alignment="CENTER" layoutY="69.0" prefHeight="38.0" prefWidth="200.0" text="Welcome," textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="Comic Sans MS" size="29.0" />
                  </font>
               </Label>
               <Label alignment="CENTER" layoutY="101.0" prefHeight="38.0" prefWidth="200.0" text="User" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="Comic Sans MS Bold" size="35.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
         <ImageView fitHeight="30.0" fitWidth="72.0" layoutX="41.0" layoutY="510.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/logout_w.png" />
            </image>
         </ImageView>
         <Button fx:id="dashboard" alignment="CENTER" layoutX="-7.0" layoutY="179.0" mnemonicParsing="false" onAction="#dashboard" prefHeight="40.0" prefWidth="198.0" styleClass="accordion-button" text="Home">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <Button fx:id="logistique" alignment="CENTER" layoutX="-4.0" layoutY="222.0" mnemonicParsing="false" onAction="#logistique" prefHeight="40.0" prefWidth="195.0" styleClass="accordion-button" text="Logistique">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <Button fx:id="espace" alignment="CENTER" layoutX="-4.0" layoutY="268.0" mnemonicParsing="false" onAction="#espace" prefHeight="40.0" prefWidth="199.0" styleClass="accordion-button" text="Espace sportif">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="14.0" layoutY="185.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/home.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="13.0" layoutY="225.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/logistics.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="10.0" layoutY="269.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/espaces.png" />
            </image>
         </ImageView>
         <Button fx:id="teams" alignment="CENTER" layoutX="-6.0" layoutY="309.0" mnemonicParsing="false" onAction="#teams" prefHeight="40.0" prefWidth="201.0" styleClass="accordion-button" text="Teams">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <Button fx:id="sponsor" alignment="CENTER" layoutX="-2.0" layoutY="348.0" mnemonicParsing="false" onAction="#sponsor" prefHeight="40.0" prefWidth="200.0" styleClass="accordion-button" text="Sponsor">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <Button fx:id="match" alignment="CENTER" layoutX="-5.0" layoutY="391.0" mnemonicParsing="false" onAction="#match" prefHeight="40.0" prefWidth="198.0" styleClass="accordion-button" text="Match">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <Button fx:id="bt_user" alignment="CENTER" layoutX="-5.0" layoutY="433.0" mnemonicParsing="false" onAction="#pageuser" prefHeight="40.0" prefWidth="202.0" styleClass="accordion-button" text="Utilisateur ">
            <font>
               <Font name="Montserrat Medium" size="12.0" />
            </font>
         </Button>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="13.0" layoutY="315.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/team.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="37.0" fitWidth="30.0" layoutX="12.0" layoutY="353.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/sponsor.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="11.0" layoutY="397.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/vs.png" />
            </image>
         </ImageView>
         <ImageView fitHeight="40.0" fitWidth="32.0" layoutX="11.0" layoutY="438.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@icons/user.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>

   <!-- Main content -->
   <VBox alignment="CENTER" layoutX="214.0" layoutY="7.0" prefHeight="593.0" prefWidth="830.0" spacing="15" style="-fx-padding: 20px;">
      <!-- Title -->
      <Label text="Liste des Espaces Sportifs" />

      <!-- Search bar with icon -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-font-size: 16px; -fx-text-fill: #5cb85c;" text="🔍" />
         <TextField fx:id="searchField" prefHeight="32.0" prefWidth="431.0" promptText="Rechercher un espace sportif..." styleClass="search-field" />
         <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
         <Button fx:id="btnReservations" onAction="#goToReservation" text="📅 Réservations" />
         <Button fx:id="btnAbonnements" onAction="#goToAbonnement" text="🎟️ Abonnements" />
      </HBox>

      <!-- TableView with modified columns -->
      <TableView fx:id="tableView" prefHeight="295.0" prefWidth="768.0">
         <columns>
            <TableColumn fx:id="colId" minWidth="50" text="ID" />
            <TableColumn fx:id="colNom" minWidth="150" text="Nom" />
            <TableColumn fx:id="colAdresse" minWidth="200" text="Adresse" />
            <TableColumn fx:id="colCategorie" minWidth="100" text="Catégorie" />
            <TableColumn fx:id="colCapacite" minWidth="100" text="Capacité" />
            <TableColumn fx:id="colClimat" minWidth="100" text="Climat" />
            <TableColumn fx:id="colMap" minWidth="100" text="Carte" />
            <TableColumn fx:id="colActions" minWidth="150" text="Actions" />
         </columns>
      </TableView>

      <!-- Buttons (Ajouter, Rafraîchir on the left, Exporter en PDF on the far right) -->
      <HBox alignment="CENTER" spacing="20">
         <Button fx:id="btnAjouter" onAction="#addEspace" styleClass="form-button" text="Ajouter" />
         <Button fx:id="btnRefresh" onAction="#refreshList" styleClass="form-button" text="🔄" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="btnExport" onAction="#handleExportEspaces" styleClass="form-button" text="Exporter en PDF" />
      </HBox>
   </VBox>
</AnchorPane>
