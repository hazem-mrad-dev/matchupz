<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EspaceSportif.ModifierEspace">
    <HBox spacing="10" alignment="CENTER">
        <!-- Menu latéral -->
        <VBox prefWidth="200" style="-fx-background-color: #d7e6eb; -fx-padding: 15px;">
            <Label text="MATCHUPZ" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10px;" />

            <Button text="🏠 Utilisateur" styleClass="menu-button" />
            <Button text="⚽ Joueur" styleClass="menu-button" />
            <Button text="🏆 Matchs" styleClass="menu-button" />
            <Button text="📍 EspaceSportif" styleClass="menu-button" />
            <Button text="💰 Sponsoring" styleClass="menu-button" />
        </VBox>

        <!-- Formulaire de modification -->
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20px;">
            <Label text="Modifier un Espace Sportif" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <Label text="Nom :" />
                <TextField fx:id="nomField" />

                <Label text="Adresse :" />
                <TextField fx:id="adresseField" />

                <Label text="Catégorie :" />
                <ComboBox fx:id="categorieField">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Salle de sport" />
                            <String fx:value="Terrain" />
                            <String fx:value="Piscine" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Capacité :" />
                <TextField fx:id="capaciteField" />
            </GridPane>

            <HBox spacing="10">
                <Button text="Modifier" fx:id="btnModifier" />
                <Button text="Annuler" fx:id="btnAnnuler" />
                <Button text="Retour" fx:id="btnRetour" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
